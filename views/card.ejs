<!DOCTYPE html>
<html>

<head>
  <title>
    Search Rooms
  </title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/card.css' />
  <link rel="stylesheet" href="../stylesheets/nav.css">
</head>

<body>
  <% include ./navb/navbb.ejs %>
  <div id="main">
    <div id="nav">
      <i id="mobile-menu-button" class="ri-menu-line"></i>
      <img id="logo" src="/images/postUploads/logo/logo.jpg" alt="">

      <ul class="nav justify-content-end">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/index">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/findroom">Find Rooms</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listroom">List Ads</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/save">Save Ads</a>
        </li>
        <li class="nav-item">
          <a class="nav-link fw-semibold" href="/profile">Hello <%= loggedInUser.username %></a>
        </li>
      </ul>
    </div>

    <!-- Details section with carousel for images -->
    <div id="details">
      <div id="carouselExampleRide" class="carousel slide" data-bs-ride="true">
        <div class="carousel-inner">
          <% for (let i = 0; i < post.images.length; i++) { %>
            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
              <img src="/images/postUploads/<%= post.images[i] %>" class="d-block w-100" alt="...">
            </div>
          <% } %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <div id="right">
        <h2 class="mb-5 text-center fw-semibold">Details of Room</h2>
        <h5 class="mb-3"><b>Type :</b> <%= post.type %></h5>
        <h5 class="mb-3"><b>City : </b><%= post.city %></h5>
        <h5 class="mb-3"><b>Area :</b> <%= post.area %></h5>
        <h5 class="mb-3"><b>Description :</b> <%= post.description %></h5>
        <h5 class="mb-3"><b>Price :</b> <%= post.price %></h5>
        <h5 class="mb-3"><b>Contact Number :</b> <%= post.number %></h5>

        <button class="btn btn-success mt-4">
          <a class="text-decoration-none text-white" href="/save/<%= post._id %>">Save Ad.ðŸ”’</a>
        </button>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  <script src="../javascripts/nav.js"></script>
</body>

</html>
